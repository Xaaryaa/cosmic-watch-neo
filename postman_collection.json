{
    "info": {
        "_postman_id": "cosmic-watch-api",
        "name": "Cosmic Watch API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"full_name\": \"John Doe\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"jwt_token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Asteroids",
            "item": [
                {
                    "name": "Get Feed",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/asteroids",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "asteroids"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Stats",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/stats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "stats"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Trigger Update",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/fetch-asteroids",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "fetch-asteroids"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Risk Analysis",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/risk-analysis/2000433",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "risk-analysis",
                                "2000433"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Watchlist",
            "item": [
                {
                    "name": "Get Watchlist",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/watchlist",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "watchlist"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Add to Watchlist",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"asteroid_id\": 2000433\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/watchlist",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "watchlist"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Remove from Watchlist",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/watchlist/2000433",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "watchlist",
                                "2000433"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5000"
        }
    ]
}